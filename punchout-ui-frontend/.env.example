# Environment Configuration
# Copy this file to .env.local for local development

# Environment name (local, dev, stage, preprod, s4-dev, production)
NEXT_PUBLIC_ENV=local

# Backend API URL (UI Backend service)
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# Gateway URL (PunchOut Gateway service)
NEXT_PUBLIC_GATEWAY_URL=http://localhost:9090

# Application name (displayed in UI)
NEXT_PUBLIC_APP_NAME=PunchOut Testing Platform - Local

# Optional: Enable debug mode
# NEXT_PUBLIC_DEBUG=true
